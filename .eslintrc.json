{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": ["eslint:recommended", "standard-jsdoc"], 
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "semi": ["off", "always"],
        "quotes": ["off", "double"],
        "no-unused-vars": ["warn"],
        "no-void": ["error"],
        "comma-spacing": ["warn"],
        "no-extra-semi": ["error"],
        "require-await": ["warn"],
        "no-undefined": ["error"],
        "no-const-assign": ["error"],
        "no-var": ["warn"]
    }
}
