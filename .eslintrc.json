{
    "env": {
        "es6": true,
        "es2021": true,
        "node": true
    },
    "globals": {
        "Command": "readonly",
        "botIntl": "writable",
        "botVersion": "writable",
        "browser": "readonly"
    },
    "extends": ["eslint:recommended"], 
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["off", "always"],
        "quotes": ["off", "double"],
        "no-unused-vars": ["warn"],
        "no-void": ["error"],
        "comma-spacing": ["warn"],
        "no-extra-semi": ["error"],
        "require-await": ["warn"],
        "no-const-assign": ["error"],
        "no-var": ["error"],
        "prefer-const": ["error"]
    }
}
